      const itemHTML = `
        <div class="cart-card">
          <img src="${item.image}" alt="${item.title}" class="cart-image rounded" />
          <div class="cart-details">
            <div class="cart-title">${item.title}</div>
            <div class="cart-price">Price: <span class="text-primary">${formatPrice(item.price)}</span></div>
            <div class="cart-quantity d-flex align-items-center">
              <button class="btn btn-sm btn-outline-secondary me-2 quantity-btn decrement" data-title="${item.title}">-</button>
              <span class="quantity-value">${item.quantity}</span>
              <button class="btn btn-sm btn-outline-secondary ms-2 quantity-btn increment" data-title="${item.title}">+</button>
            </div>
            <div class="cart-subtotal">Subtotal: <span class="text-primary">${formatPrice(itemTotal)}</span></div>
          </div>
          <button class="btn btn-danger btn-sm remove-btn" data-title="${item.title}">Remove</button>
        </div>
      `;
      container.insertAdjacentHTML('beforeend', itemHTML);
    });

    document.getElementById('cart-total').textContent = `Total: ${formatPrice(total)}`;

    // Remove button event
    document.querySelectorAll('.remove-btn').forEach(button => {
      button.addEventListener('click', () => {
        const titleToRemove = button.getAttribute('data-title');
        let cart = JSON.parse(localStorage.getItem('cart')) || [];
        cart = cart.filter(item => item.title !== titleToRemove);
        localStorage.setItem('cart', JSON.stringify(cart));
        renderCart();
      });
    });

    // Quantity buttons event
    document.querySelectorAll('.quantity-btn').forEach(button => {
      button.addEventListener('click', () => {
        const title = button.getAttribute('data-title');
        let cart = JSON.parse(localStorage.getItem('cart')) || [];
        const productIndex = cart.findIndex(item => item.title === title);
        if (productIndex > -1) {
          if (button.classList.contains('increment')) {
            cart[productIndex].quantity += 1;
          } else if (button.classList.contains('decrement')) {
            if (cart[productIndex].quantity > 1) {
              cart[productIndex].quantity -= 1;
            } else {
              // Remove if quantity falls below 1
              cart.splice(productIndex, 1);
            }
          }
          localStorage.setItem('cart', JSON.stringify(cart));
          renderCart();
        }
      });
    });
  }

  // Initialize cart display on page load
  window.addEventListener('DOMContentLoaded', renderCart);
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>










