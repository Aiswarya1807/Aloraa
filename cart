Cart

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Shopping Cart - ALORAA</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body { background-color: #f9f6fc; }
    .navbar { background-color: #7c1b8d; }
    footer { background-color: #bf94c9; }
    .text-primary { color: #7c1b8d !important; }
    .cart-image { width: 100px; height: 100px; object-fit: contain; }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark shadow">
    <div class="container">
      <a class="navbar-brand" href="index.html">ALORAA</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link text-light" href="index.html">Home</a></li>
          <li class="nav-item"><a class="nav-link text-light" href="skincare.html">Skincare</a></li>
          <li class="nav-item"><a class="nav-link text-light" href="makeup.html">Makeup</a></li>
          <li class="nav-item"><a class="nav-link text-light" href="cart.html">Cart</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container py-5">
    <h2 class="mb-4 text-primary">Your Cart</h2>
    <div id="cart-container"></div>
    <div class="text-end fw-bold fs-4 mt-4" id="cart-total"></div>
  </div>

  <footer class="text-center py-3 text-muted">&copy; 2025 ALORAA. All rights reserved.</footer>

<script>
  function formatPrice(num) {
    return num.toLocaleString('en-IN', { style: 'currency', currency: 'INR' });
  }

  function renderCart() {
    const cart = JSON.parse(localStorage.getItem('cart')) || [];
    const container = document.getElementById('cart-container');
    container.innerHTML = '';

    if (cart.length === 0) {
      container.innerHTML = '<p>Your cart is empty.</p>';
      document.getElementById('cart-total').textContent = '';
      return;
    }

    let total = 0;

    cart.forEach(item => {
      const itemTotal = item.price * item.quantity;
      total += itemTotal;

      const itemHTML = `
        <div class="card mb-3 p-3 shadow-sm">
          <div class="row g-3 align-items-center">
            <div class="col-auto">
              <img src="${item.image}" alt="${item.title}" class="cart-image rounded" />
            </div>
            <div class="col">
              <h5>${item.title}</h5>
              <p>Price: <span class="text-primary">${formatPrice(item.price)}</span></p>
              <p>Quantity: ${item.quantity}</p>
              <p>Subtotal: <span class="text-primary">${formatPrice(itemTotal)}</span></p>
            </div>
            <div class="col-auto">
              <button class="btn btn-danger btn-sm remove-btn" data-title="${item.title}">Remove</button>
            </div>
          </div>
        </div>
      `;
      container.insertAdjacentHTML('beforeend', itemHTML);
    });

    document.getElementById('cart-total').textContent = `Total: ${formatPrice(total)}`;

    // Attach remove button events
    document.querySelectorAll('.remove-btn').forEach(button => {
      button.addEventListener('click', () => {
        const titleToRemove = button.getAttribute('data-title');
        let cart = JSON.parse(localStorage.getItem('cart')) || [];
        cart = cart.filter(item => item.title !== titleToRemove);
        localStorage.setItem('cart', JSON.stringify(cart));
        renderCart();
      });
    });
  }

  // Initialize cart display on page load
  window.addEventListener('DOMContentLoaded', renderCart);
</script>

</body>
</html>








